#!/bin/sh
#
if [ ! -d autotest ]; then
    echo >&2 "This expects to be run from the autotest parent"
    if [ -d ../autotest ]; then
        echo >&2 "...switching up..."
        cd .. 
    else
        exit 1
    fi
fi

count=0;
for f in autotest/*.sh; do
    $f
    count=`expr $count + 1`
done

echo "$count tests run"
