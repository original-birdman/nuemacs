#!/bin/sh
#
if [ ! -d autotest ]; then
    echo >&2 "This expects to be run from the autotest parent"
    if [ -d ../autotest ]; then
        echo >&2 "...switching up..."
        cd .. 
    else
        exit 1
    fi
fi

count=0;
for f in autotest/*.sh; do
    $f FULL-RUN
    count=`expr $count + 1`
done

echo "$count tests run"

if /bin/ls FAIL-* 2>/dev/null; then
    echo "Failed test results:"
    /bin/ls -1 FAIL-*
fi
